<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 flex items-center justify-center">

  <div class="bg-white/20 backdrop-blur-lg shadow-2xl rounded-2xl w-full max-w-md p-8 m-4">
    <h2 class="text-3xl font-bold text-white text-center mb-6">Sign Up</h2>
    
    <form action="/signUp" method="POST" enctype="multipart/form-data" class="space-y-5">
      
      <!-- Name -->
      <div>
        <label class="block text-white font-medium mb-1" for="name">Name</label>
        <input type="text" id="name" name="name" required 
               class="w-full px-4 py-2 rounded-lg border border-white/30 bg-white/10 text-white placeholder-white/70 focus:outline-none focus:ring-2 focus:ring-purple-300" 
               placeholder="Your Name" />
      </div>

      <!-- Email -->
      <div>
        <label class="block text-white font-medium mb-1" for="email">Email</label>
        <input type="email" id="email" name="email" required 
               class="w-full px-4 py-2 rounded-lg border border-white/30 bg-white/10 text-white placeholder-white/70 focus:outline-none focus:ring-2 focus:ring-purple-300" 
               placeholder="you@example.com" />
      </div>

      <!-- Password -->
      <div>
        <label class="block text-white font-medium mb-1" for="password">Password</label>
        <input type="password" id="password" name="password" required 
               class="w-full px-4 py-2 rounded-lg border border-white/30 bg-white/10 text-white placeholder-white/70 focus:outline-none focus:ring-2 focus:ring-purple-300" 
               placeholder="••••••••" />
      </div>

      <!-- Age -->
      <div>
        <label class="block text-white font-medium mb-1" for="age">Age</label>
        <input type="number" id="age" name="age" required min="0" max="100"
               class="w-full px-4 py-2 rounded-lg border border-white/30 bg-white/10 text-white placeholder-white/70 focus:outline-none focus:ring-2 focus:ring-purple-300" 
               placeholder="Your Age" />
      </div>

      <!-- Image Upload -->
      <div>
        <label class="block text-white font-medium mb-1" for="image">Profile Image</label>
        <input type="file" id="image" name="image" accept="image/*"
               class="w-full text-white file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-purple-500 file:text-white hover:file:bg-purple-600" />
      </div>

      <!-- Submit -->
      <button type="submit"
              class="w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 rounded-lg transition duration-300">
        Submit
      </button>

      <!-- Forgot Password Link -->
  <div class="text-right">
    <a href="/forgot-password" class="text-sm text-white/70 hover:text-white underline">
     Forgot Password?
     </a>
  </div>

    </form>
  </div>

</body>
</html>
